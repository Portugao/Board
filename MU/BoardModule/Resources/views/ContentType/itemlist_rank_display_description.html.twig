{# Purpose of this template: Display ranks within an external context #}
<dl>
    {% for rank in items %}
        <dt>{{ rank|muboardmodule_formattedTitle }}</dt>
        {% if rank.name %}
            <dd>{{ rank.name|striptags|truncate(200, true, '&hellip;') }}</dd>
        {% endif %}
        <dd><a href="{{ path('muboardmodule_rank_display', {'id': rank.getId()}) }}">{{ __('Read more') }}</a>
        </dd>
    {% else %}
        <dt>{{ __('No entries found.') }}</dt>
    {% endfor %}
</dl>
