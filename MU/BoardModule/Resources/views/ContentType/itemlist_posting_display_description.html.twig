{# Purpose of this template: Display postings within an external context #}
<dl>
    {% for posting in items %}
        <dt>{{ posting|muboardmodule_formattedTitle }}</dt>
        {% if posting.text %}
            <dd>{{ posting.text|striptags|truncate(200, true, '&hellip;') }}</dd>
        {% endif %}
        <dd><a href="{{ path('muboardmodule_posting_display', {'id': posting.getId()}) }}">{{ __('Read more') }}</a>
        </dd>
    {% else %}
        <dt>{{ __('No entries found.') }}</dt>
    {% endfor %}
</dl>
