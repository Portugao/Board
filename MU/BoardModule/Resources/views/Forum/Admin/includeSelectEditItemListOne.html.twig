{# purpose of this template: inclusion template for display of related forum #}
{% set editImage = '<span class="fa fa-pencil-square-o"></span>' %}
{% set removeImage = '<span class="fa fa-trash-o"></span>' %}

<input type="hidden" id="{{ idPrefix }}Mode" name="{{ idPrefix }}Mode" value="1" />

<ul id="{{ idPrefix }}ReferenceList">
{% if item is defined and item.getKey()|default %}
{% set idPrefixItem = idPrefix ~ 'Reference_' ~ item.getKey() %}
<li id="{{ idPrefixItem }}">
    {{ item|muboardmodule_formattedTitle }}
    <a id="{{ idPrefixItem }}Edit" href="{{ path('muboardmodule_forum_' ~ routeArea ~ 'edit', {'id': item.getId()}) }}">{{ editImage|raw }}</a>
     <a id="{{ idPrefixItem }}Remove" href="javascript:mUBoardRemoveRelatedItem('{{ idPrefix }}', '{{ item.getKey() }}');">{{ removeImage|raw }}</a>
</li>
{% endif %}
</ul>
