{# purpose of this template: module configuration page #}
{% extends 'MUBoardModule::adminBase.html.twig' %}
{% block title __('Settings') %}
{% block admin_page_icon 'wrench' %}
{% block content %}
    <div class="muboardmodule-config">
        {% form_theme form with [
            '@MUBoardModule/Form/bootstrap_3.html.twig',
            'ZikulaFormExtensionBundle:Form:form_div_layout.html.twig'
        ] %}
        {{ form_start(form) }}
        <div class="zikula-bootstrap-tab-container">
            <ul class="nav nav-tabs">
                {% set tabTitle = __('Moderation') %}
                <li role="presentation" class="active">
                    <a id="vars1Tab" href="#tab1" title="{{ tabTitle|e('html_attr') }}" role="tab" data-toggle="tab">{{ tabTitle }}</a>
                </li>
                {% set tabTitle = __('List views') %}
                <li role="presentation">
                    <a id="vars2Tab" href="#tab2" title="{{ tabTitle|e('html_attr') }}" role="tab" data-toggle="tab">{{ tabTitle }}</a>
                </li>
                {% set tabTitle = __('Images') %}
                <li role="presentation" class=" dropdown">
                    <a id="imagesTabDrop" class="dropdown-toggle" href="#" data-toggle="dropdown" aria-controls="imagesTabDropSections" aria-expanded="false" title="{{ tabTitle|e('html_attr') }}">{{ tabTitle }}<span class="caret"></span></a>
                    <ul id="imagesTabDropSections" class="dropdown-menu" aria-labelledby="imagesTabDrop">
                    <li>
                        <a id="imagesPostingFirstImageTab" href="#tabImagesPostingFirstImage" role="tab" data-toggle="tab" aria-controls="tabImagesPostingFirstImage">{{ __('Postings first image') }}</a>
                    </li>
                    <li>
                        <a id="imagesPostingSecondImageTab" href="#tabImagesPostingSecondImage" role="tab" data-toggle="tab" aria-controls="tabImagesPostingSecondImage">{{ __('Postings second image') }}</a>
                    </li>
                    <li>
                        <a id="imagesPostingThirdImageTab" href="#tabImagesPostingThirdImage" role="tab" data-toggle="tab" aria-controls="tabImagesPostingThirdImage">{{ __('Postings third image') }}</a>
                    </li>
                    <li>
                        <a id="imagesRankUploadImageTab" href="#tabImagesRankUploadImage" role="tab" data-toggle="tab" aria-controls="tabImagesRankUploadImage">{{ __('Ranks upload image') }}</a>
                    </li>
                    </ul>
                </li>
                {% set tabTitle = __('Integration') %}
                <li role="presentation">
                    <a id="vars4Tab" href="#tab4" title="{{ tabTitle|e('html_attr') }}" role="tab" data-toggle="tab">{{ tabTitle }}</a>
                </li>
                {% set tabTitle = __('Workflows') %}
                <li role="presentation">
                    <a id="workflowsTab" href="#tabWorkflows" title="{{ tabTitle|e('html_attr') }}" role="tab" data-toggle="tab">{{ tabTitle }}</a>
                </li>
            </ul>

            {{ form_errors(form) }}
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane fade in active" id="tab1" aria-labelledby="vars1Tab">
                    {% set tabTitle = __('Moderation') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                    
                        <p class="alert alert-info">{{ __('Here you can assign moderation groups for enhanced workflow actions.')|nl2br }}</p>
                    
                        {{ form_row(form.moderationGroupForPostings) }}
                    </fieldset>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="tab2" aria-labelledby="vars2Tab">
                    {% set tabTitle = __('List views') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                    
                        <p class="alert alert-info">{{ __('Here you can configure parameters for list views.')|nl2br }}</p>
                    
                        {{ form_row(form.categoryEntriesPerPage) }}
                        {{ form_row(form.linkOwnCategoriesOnAccountPage) }}
                        {{ form_row(form.forumEntriesPerPage) }}
                        {{ form_row(form.linkOwnForumsOnAccountPage) }}
                        {{ form_row(form.postingEntriesPerPage) }}
                        {{ form_row(form.linkOwnPostingsOnAccountPage) }}
                        {{ form_row(form.aboEntriesPerPage) }}
                        {{ form_row(form.linkOwnAbosOnAccountPage) }}
                        {{ form_row(form.userEntriesPerPage) }}
                        {{ form_row(form.rankEntriesPerPage) }}
                        {{ form_row(form.linkOwnRanksOnAccountPage) }}
                    </fieldset>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="tabImagesPostingFirstImage" aria-labelledby="imagesPostingFirstImageTab">
                    {% set tabTitle = __('Image settings for postings first image') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                
                        {{ form_row(form.enableShrinkingForPostingFirstImage) }}
                        <div id="shrinkDetailsPostingFirstImage">
                        {{ form_row(form.shrinkWidthPostingFirstImage) }}
                        {{ form_row(form.shrinkHeightPostingFirstImage) }}
                        </div>
                        {{ form_row(form.thumbnailModePostingFirstImage) }}
                        {{ form_row(form.thumbnailWidthPostingFirstImageView) }}
                        {{ form_row(form.thumbnailHeightPostingFirstImageView) }}
                        {{ form_row(form.thumbnailWidthPostingFirstImageDisplay) }}
                        {{ form_row(form.thumbnailHeightPostingFirstImageDisplay) }}
                        {{ form_row(form.thumbnailWidthPostingFirstImageEdit) }}
                        {{ form_row(form.thumbnailHeightPostingFirstImageEdit) }}
                    </fieldset>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="tabImagesPostingSecondImage" aria-labelledby="imagesPostingSecondImageTab">
                    {% set tabTitle = __('Image settings for postings second image') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                
                        {{ form_row(form.enableShrinkingForPostingSecondImage) }}
                        <div id="shrinkDetailsPostingSecondImage">
                        {{ form_row(form.shrinkWidthPostingSecondImage) }}
                        {{ form_row(form.shrinkHeightPostingSecondImage) }}
                        </div>
                        {{ form_row(form.thumbnailModePostingSecondImage) }}
                        {{ form_row(form.thumbnailWidthPostingSecondImageView) }}
                        {{ form_row(form.thumbnailHeightPostingSecondImageView) }}
                        {{ form_row(form.thumbnailWidthPostingSecondImageDisplay) }}
                        {{ form_row(form.thumbnailHeightPostingSecondImageDisplay) }}
                        {{ form_row(form.thumbnailWidthPostingSecondImageEdit) }}
                        {{ form_row(form.thumbnailHeightPostingSecondImageEdit) }}
                    </fieldset>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="tabImagesPostingThirdImage" aria-labelledby="imagesPostingThirdImageTab">
                    {% set tabTitle = __('Image settings for postings third image') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                
                        {{ form_row(form.enableShrinkingForPostingThirdImage) }}
                        <div id="shrinkDetailsPostingThirdImage">
                        {{ form_row(form.shrinkWidthPostingThirdImage) }}
                        {{ form_row(form.shrinkHeightPostingThirdImage) }}
                        </div>
                        {{ form_row(form.thumbnailModePostingThirdImage) }}
                        {{ form_row(form.thumbnailWidthPostingThirdImageView) }}
                        {{ form_row(form.thumbnailHeightPostingThirdImageView) }}
                        {{ form_row(form.thumbnailWidthPostingThirdImageDisplay) }}
                        {{ form_row(form.thumbnailHeightPostingThirdImageDisplay) }}
                        {{ form_row(form.thumbnailWidthPostingThirdImageEdit) }}
                        {{ form_row(form.thumbnailHeightPostingThirdImageEdit) }}
                    </fieldset>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="tabImagesRankUploadImage" aria-labelledby="imagesRankUploadImageTab">
                    {% set tabTitle = __('Image settings for ranks upload image') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                
                        {{ form_row(form.enableShrinkingForRankUploadImage) }}
                        <div id="shrinkDetailsRankUploadImage">
                        {{ form_row(form.shrinkWidthRankUploadImage) }}
                        {{ form_row(form.shrinkHeightRankUploadImage) }}
                        </div>
                        {{ form_row(form.thumbnailModeRankUploadImage) }}
                        {{ form_row(form.thumbnailWidthRankUploadImageView) }}
                        {{ form_row(form.thumbnailHeightRankUploadImageView) }}
                        {{ form_row(form.thumbnailWidthRankUploadImageDisplay) }}
                        {{ form_row(form.thumbnailHeightRankUploadImageDisplay) }}
                        {{ form_row(form.thumbnailWidthRankUploadImageEdit) }}
                        {{ form_row(form.thumbnailHeightRankUploadImageEdit) }}
                    </fieldset>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="tab4" aria-labelledby="vars4Tab">
                    {% set tabTitle = __('Integration') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                    
                        <p class="alert alert-info">{{ __('These options allow you to configure integration aspects.')|nl2br }}</p>
                    
                        {{ form_row(form.enabledFinderTypes) }}
                    </fieldset>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="tabWorkflows" aria-labelledby="workflowsTab">
                    {% set tabTitle = __('Workflows') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                
                        <p class="alert alert-info">{{ __('Here you can inspect and amend the existing workflows.') }}</p>
                
                        <h4>{{ __('Categories') }}</h4>
                        <p><a href="{{ path('zikula_workflow_editor_index', {workflow: 'muboardmodule_none'}) }}" title="{{ __('Edit workflow for categories') }}" target="_blank"><i class="fa fa-cubes"></i> {{ __('Edit categories workflow') }}</a>
                        <h4>{{ __('Forums') }}</h4>
                        <p><a href="{{ path('zikula_workflow_editor_index', {workflow: 'muboardmodule_none'}) }}" title="{{ __('Edit workflow for forums') }}" target="_blank"><i class="fa fa-cubes"></i> {{ __('Edit forums workflow') }}</a>
                        <h4>{{ __('Postings') }}</h4>
                        <p><a href="{{ path('zikula_workflow_editor_index', {workflow: 'muboardmodule_standard'}) }}" title="{{ __('Edit workflow for postings') }}" target="_blank"><i class="fa fa-cubes"></i> {{ __('Edit postings workflow') }}</a>
                        <h4>{{ __('Abos') }}</h4>
                        <p><a href="{{ path('zikula_workflow_editor_index', {workflow: 'muboardmodule_none'}) }}" title="{{ __('Edit workflow for abos') }}" target="_blank"><i class="fa fa-cubes"></i> {{ __('Edit abos workflow') }}</a>
                        <h4>{{ __('Users') }}</h4>
                        <p><a href="{{ path('zikula_workflow_editor_index', {workflow: 'muboardmodule_none'}) }}" title="{{ __('Edit workflow for users') }}" target="_blank"><i class="fa fa-cubes"></i> {{ __('Edit users workflow') }}</a>
                        <h4>{{ __('Ranks') }}</h4>
                        <p><a href="{{ path('zikula_workflow_editor_index', {workflow: 'muboardmodule_none'}) }}" title="{{ __('Edit workflow for ranks') }}" target="_blank"><i class="fa fa-cubes"></i> {{ __('Edit ranks workflow') }}</a>
                    </fieldset>
                </div>
            </div>
        </div>

        <div class="form-group form-buttons">
            <div class="col-sm-offset-3 col-sm-9">
                {{ form_widget(form.save) }}
                {{ form_widget(form.reset) }}
                {{ form_widget(form.cancel) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
{% block footer %}
    {{ parent() }}
    {{ pageAddAsset('javascript', zasset('@MUBoardModule:js/MUBoardModule.Config.js')) }}
    {{ pageAddAsset('javascript', zasset('@MUBoardModule:js/MUBoardModule.Validation.js'), 98) }}
    {{ pageAddAsset('javascript', zasset('@MUBoardModule:js/MUBoardModule.EditFunctions.js'), 99) }}
    {% set formInitScript %}
        <script>
        /* <![CDATA[ */
            ( function($) {
                $(document).ready(function() {
                    mUBoardInitEditForm('edit', '1');
                });
            })(jQuery);
        /* ]]> */
        </script>
    {% endset %}
    {{ pageAddAsset('footer', formInitScript) }}
{% endblock %}
