{% spaceless %}"{{ __('Title') }}";"{{ __('Description') }}";"{{ __('Pos') }}";"{{ __('Workflow state') }}"
;"{{ __('Forum') }}"
{% endspaceless %}
{% for category in items %}
{% spaceless %}
    "{{ category.title }}";"{{ category.description|safeHtml }}";"{{ category.pos }}";"{{ category.workflowState|muboardmodule_objectState(false)|lower }}"
    ;"
    {% if category.forum|default %}
        {% for relatedItem in category.forum %}
        {{ relatedItem|muboardmodule_formattedTitle }}{% if not loop.last %}, {% endif %}
        {% endfor %}
    {% endif %}
    "
{% endspaceless %}
{% endfor %}
