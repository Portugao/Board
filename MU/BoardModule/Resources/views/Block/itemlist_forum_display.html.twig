{# Purpose of this template: Display forums within an external context #}
{% for forum in items %}
    <h3>{{ forum|muboardmodule_formattedTitle }}</h3>
    <p><a href="{{ path('muboardmodule_forum_display', {'id': forum.getId()}) }}" title="{{ __('Read more')|e('html_attr') }}">{{ __('Read more') }}</a>
    </p>
{% endfor %}
